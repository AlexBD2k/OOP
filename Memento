using System;
using System.IO;
using System.Text;
using System.Linq;
using System.Collections.Generic;

namespace Memento
{
    class Program
    {
        //create the canvas
        public static Canvas canvas = new Canvas(500, 500);
        //create a random int generator
        public static Random rnd = new Random();
        //create the caretaker
        public static Caretaker caretaker = new Caretaker();
        //create the originator
        public static Originator originator = new Originator();
        //int to keep track of current shapes index in the caretaker
        public static int currentShape = 0;
        //int to keep track of total amount of shapes in the caretaker
        public static int savedShape = 0;

        static void Main(string[] args)
        {
            Console.WriteLine("\nPress \"H\" for list of commands \n");
            while(true)
            {
                //read in the user input
                String input = Console.ReadLine();
                input = input.ToLower();

                //case if user wishes to add a shape to the canvas
                if(input.Contains("a"))
                {
                    //check if shape to be added is custom or random
                    if(input.Contains('('))
                    {
                        addShape(canvas, input);
                    }
                    else
                    {
                        addRndShape(canvas, input);
                    }
                }
                
                //case if the user wishes to see list of shapes
                else if(input.Equals("l"))
                {
                    Console.WriteLine("\nValid Shapes:\n");
                    Console.WriteLine("Rectangle");
                    Console.WriteLine("Circle");
                    Console.WriteLine("Ellipse");
                    Console.WriteLine("Line");
                    Console.WriteLine("PolyLine");
                    Console.WriteLine("Polygon");
                    Console.WriteLine("Path\n");
                }

                //case if the user wishes to undo a change
                else if(input.Equals("u"))
                {
                    //check that you can undo
                    if(currentShape >= 1)
                    {
                        //decrement the current shape count
                        currentShape--;
                        //find the shape that needs to be removed from the caretaker
                        Shape shapeToRemove = originator.recoverFromMemento(caretaker.getMemento(currentShape));
                        //remove the shape from the canvas
                        canvas.Remove(shapeToRemove);
                        Console.WriteLine(shapeToRemove.ToConsole() + " removed from the canvas.\n");
                    }
                    else
                    {
                        Console.WriteLine("\nError: nothing to undo.\n");
                    }
                }

                //case if the user wishes to redo a change
                else if(input.Equals("r"))
                {
                    //check that you can redo
                    if((savedShape) > currentShape)
                    {
                        //find the shape that needs to be added back from the caretaker
                        Shape shapeToAddBack = originator.recoverFromMemento(caretaker.getMemento(currentShape));
                        //add the shape to the canvas
                        canvas.Add(shapeToAddBack);
                        Console.WriteLine(shapeToAddBack.ToConsole() + " added back to the canvas.\n");
                        //increment the current shape count
                        currentShape++;
                    }
                    else
                    {
                        Console.WriteLine("\nError: nothing to redo.\n");
                    }
                }

                //case if the user wishes to clear the canvas
                else if(input.Equals("c"))
                {
                    canvas.Clear();
                    Console.WriteLine("\nCleared the canvas!\n");
                }

                //case if the user wishes to save the canvas to an svg file
                else if(input.Equals("s"))
                {
                    //convert the canvas to an svg file
                    canvasToFile(canvas);
                    Console.WriteLine("\nCanvas saved to SVG file!\n");
                }

                //case if the user wishes to print the canvas to the console
                else if(input.Equals("p"))
                {
                    //print the canvas to the console
                    canvasToConsole(canvas);
                    Console.WriteLine();
                }

                //case if the user wishes to know the commands
                else if(input.Equals("h"))
                {
                    Console.WriteLine("\ntype \"A <shape>\" to add a random shape to the canvas");
                    Console.WriteLine("type \"A <shape> [<style parameters>]\" to add a random styled shape to the canvas\n");
                    Console.WriteLine("type \"A <shape> (<parameters>)\" to add a custom shape to the canvas");
                    Console.WriteLine("type \"A <shape> (<parameters>) [<style parameters>]\" to add a styled custom shape to the canvas\n");
                    Console.WriteLine("Example: A rectangle (10,10,100,100) [5,black,transparent]\n");
                    Console.WriteLine("type \"L\" for a list of valid shapes\n");
                    Console.WriteLine("type \"U\" to undo an action");
                    Console.WriteLine("type \"R\" to redo an action");
                    Console.WriteLine("type \"C\" to clear the canvas\n");
                    Console.WriteLine("type \"S\" to save the canvas to an svg file");
                    Console.WriteLine("type \"P\" to print the canvas to the console\n");
                    Console.WriteLine("type \"Q\" to quit the program\n");
                    Console.WriteLine("type \"H\" to see this menu again\n");
                }

                //case if the user wishes to quit
                else if(input.Equals("q"))
                {
                    Console.WriteLine("\nQuitting program...\n");
                    break;
                }
                //case if invalid command
                else
                {
                    Console.WriteLine("\nError unknown command, for list of commands type \"Help\".\n");
                }   
            }
        }
        // ---------------------- method to add a random shape ----------------------
        public static void addRndShape(Canvas canvas, string input)
        {
            //split the input by parameters
            string[] parameters = input.Split();
            //take the shape type
            string theShape = parameters[1];

            //check if the user wants a styled random shape
            if(input.Contains('['))
            {
                //take the style options
                string rawStyles = parameters[2].Remove(parameters[2].Length -1,1).Remove(0,1);
                //make an array of the vars
                string[] styles = rawStyles.Split(",");

                switch(theShape)
                {
                    case "rectangle":
                        //create a random rectangle
                        Rect rect = new Rect(rnd.Next(0,500),rnd.Next(0,500),rnd.Next(10,250),rnd.Next(10,250),1);
                        //styling
                        rect.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(rect);
                        //save a memento of the rectaagle
                        originator.set(rect);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Rectangle (x = " + rect.xPos +
                            ", y = " + rect.yPos +
                            ", w = " + rect.width +
                            ", h = " + rect.height + ")" +
                            " style = [" + rect.lineThick + 
                            " " + rect.lineColor + 
                            " " + rect.fillColor + 
                            "] added to canvas."
                        );
                        Console.WriteLine();
                        break;
                    case "circle":
                        //create the random circle
                        Circle circle = new Circle(rnd.Next(10,100),rnd.Next(0,500),rnd.Next(0,500),1);
                        //styling
                        circle.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(circle);
                        //save a memento of the circle
                        originator.set(circle);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Circle (x = " + circle.cenX +
                            ", y = " + circle.cenY +
                            ", r = " + circle.rad + ")" +
                            " style = [" + circle.lineThick + 
                            " " + circle.lineColor + 
                            " " + circle.fillColor + 
                            "] added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "ellipse":
                        //create the random ellipse
                        Ellipse ellipse = new Ellipse(rnd.Next(1,100),rnd.Next(1,100),rnd.Next(1,500),rnd.Next(1,500),1);
                        //styling
                        ellipse.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(ellipse);
                        //save a memento of the ellipse
                        originator.set(ellipse);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Ellipse (radX = " + ellipse.radX +
                            ", radY = " + ellipse.radY +
                            ", cenX = " + ellipse.cenX +
                            ", cenY = " + ellipse.cenX + ")" +
                            " style = [" + ellipse.lineThick + 
                            " " + ellipse.lineColor + 
                            " " + ellipse.fillColor + 
                            "] added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "line":
                        //create the random line
                        Line line = new Line(rnd.Next(0,500),rnd.Next(0,500),rnd.Next(0,500),rnd.Next(0,500),1);
                        //styling
                        line.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(line);
                        //save a memento of the line
                        originator.set(line);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Line (x1 = " + line.xPoint1 +
                            ", y1 = " + line.xPoint2 +
                            ", x2 = " + line.yPoint1 +
                            ", y2 = " + line.yPoint2 + ")" +
                            " style = [" + line.lineThick + 
                            " " + line.lineColor + 
                            " " + line.fillColor + 
                            "] added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "polyline":
                        //create int for random point amount
                        int p1 = rnd.Next(3,15);
                        //create stringbuilder to stroe points
                        var sb1 = new StringBuilder();
                        //loop p times
                        for(int i = 0; i < p1; i++)
                        {
                            //create a point
                            int j = rnd.Next(0,500);
                            //add it to the stringbuilder
                            sb1.Append(" " + j.ToString());
                        }
                        //convert the stringbuilder to string
                        string points1 = sb1.ToString();
                        //create the random line
                        PolyLine pline = new PolyLine(points1,1);
                        //styling
                        pline.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(pline);
                        //save a memento of the polyline
                        originator.set(pline);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("polyline (points =" + pline.points + ")" +
                            " style = [" + pline.lineThick + 
                            " " + pline.lineColor + 
                            " " + pline.fillColor + 
                            "] added to canvas.");
                        Console.WriteLine();
                        break;

                    case "polygon":
                        //create int for random point amount
                        int p2 = rnd.Next(3,15);
                        //create stringbuilder to stroe points
                        var sb2 = new StringBuilder();
                        //loop p times
                        for(int i = 0; i < p2; i++)
                        {
                            //create a point
                            int j = rnd.Next(0,500);
                            //add it to the stringbuilder
                            sb2.Append(" " + j.ToString());
                        }
                        //convert the stringbuilder to string
                        string points2 = sb2.ToString();
                        //create the random polygon
                        Polygon polygon = new Polygon(points2,1);
                        //styling
                        polygon.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(polygon);
                        //save a memento of the polygon
                        originator.set(polygon);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("polylgon (points =" + polygon.points + ")" +
                            " style = [" + polygon.lineThick + 
                            " " + polygon.lineColor + 
                            " " + polygon.fillColor + 
                            "] added to canvas.");
                        Console.WriteLine();
                        break;
                    
                    case "path":
                        //create int for random point amount
                        int p3 = rnd.Next(3,10);
                        //create stringbuilder to stroe points
                        var sb3 = new StringBuilder();
                        //create a string of possible commands
                        string pOptions = "MLHVCSQT";
                        //loop p times
                        for(int i = 0; i < p3; i++)
                        {
                            //create some points
                            int j = rnd.Next(0,500);
                            int k = rnd.Next(0,500);
                            int l = rnd.Next(0,500);
                            int m = rnd.Next(0,500);
                            int n = rnd.Next(0,500);
                            int o = rnd.Next(0,500);
                            //choose a command
                            char comm = pOptions[rnd.Next(0,7)];
                            //if comm is H or V only 1 point is needed
                            if(comm == 'H' || comm == 'V')
                            {
                                //add commmand and points to the stringbuilder
                                sb3.Append(" " + comm + " " + j.ToString());
                            }
                            //if comm is M, L or T then  2 points are needed
                            if(comm == 'M' || comm == 'L' || comm == 'T')
                            {
                                //add commmand and points to the stringbuilder
                                sb3.Append(" " + comm + " " + j.ToString() + " " + k.ToString());
                            }
                            //if comm is S or Q then 4 points are needed
                            if(comm == 'S' || comm == 'Q')
                            {
                                //add commmand and points to the stringbuilder
                                sb3.Append(
                                    " " + comm + " "
                                    + j.ToString() + " " + k.ToString() + ", " 
                                    + l.ToString() + " " + m.ToString()
                                );
                            }
                            //if comm is C then all 6 points are needed
                            if(comm == 'C')
                            {
                                //add commmand and points to the stringbuilder
                                sb3.Append(
                                    " " + comm + " " 
                                    + j.ToString() + " " + k.ToString() + ", " 
                                    + l.ToString() + " " + m.ToString() + ", " 
                                    + n.ToString() + " " + o.ToString()
                                );
                            }
                            //close off the path with a Z
                            sb3.Append(" Z");
                        }
                        //convert the stringbuilder to string
                        string points = sb3.ToString();
                        //create the random path
                        Path path = new Path(points,1);
                        //styling
                        path.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(path);
                        //save a memento of the path
                        originator.set(path);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("path (points =" + path.path + ")" +
                            " style = [" + path.lineThick + 
                            " " + path.lineColor + 
                            " " + path.fillColor + 
                            "] added to canvas.");
                        Console.WriteLine();
                        break;
                    default:
                        Console.WriteLine("Error: invalid shape.");
                        break;
                }
            }
            else
            {
                switch(theShape)
                {
                    case "rectangle":
                        //create a random rectangle
                        Rect rect = new Rect(rnd.Next(0,500),rnd.Next(0,500),rnd.Next(10,250),rnd.Next(10,250),1);
                        //add it to the canvas
                        canvas.Add(rect);
                        //save a memento of the rectaagle
                        originator.set(rect);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Rectangle (x = " + rect.xPos +
                            ", y = " + rect.yPos +
                            ", w = " + rect.width +
                            ", h = " + rect.height +
                            ") added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "circle":
                        //create the random circle
                        Circle circle = new Circle(rnd.Next(10,100),rnd.Next(0,500),rnd.Next(0,500),1);
                        //add it to the canvas
                        canvas.Add(circle);
                        //save a memento of the circle
                        originator.set(circle);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Circle (x = " + circle.cenX +
                            ", y = " + circle.cenY +
                            ", r = " + circle.rad +
                            ") added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "ellipse":
                        //create the random ellipse
                        Ellipse ellipse = new Ellipse(rnd.Next(1,100),rnd.Next(1,100),rnd.Next(1,500),rnd.Next(1,500),1);
                        //add it to the canvas
                        canvas.Add(ellipse);
                        //save a memento of the ellipse
                        originator.set(ellipse);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Ellipse (radX = " + ellipse.radX +
                            ", radY = " + ellipse.radY +
                            ", cenX = " + ellipse.cenX +
                            ", cenY = " + ellipse.cenX +
                            ") added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "line":
                        //create the random line
                        Line line = new Line(rnd.Next(0,500),rnd.Next(0,500),rnd.Next(0,500),rnd.Next(0,500),1);
                        //add it to the canvas
                        canvas.Add(line);
                        //save a memento of the line
                        originator.set(line);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Line (x1 = " + line.xPoint1 +
                            ", y1 = " + line.xPoint2 +
                            ", x2 = " + line.yPoint1 +
                            ", y2 = " + line.yPoint2 +
                            ") added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "polyline":
                        //create int for random point amount
                        int p1 = rnd.Next(3,15);
                        //create stringbuilder to stroe points
                        var sb1 = new StringBuilder();
                        //loop p times
                        for(int i = 0; i < p1; i++)
                        {
                            //create a point
                            int j = rnd.Next(0,500);
                            //add it to the stringbuilder
                            sb1.Append(" " + j.ToString());
                        }
                        //convert the stringbuilder to string
                        string points1 = sb1.ToString();
                        //create the random polyline
                        PolyLine pline = new PolyLine(points1,1);
                        //add it to the canvas
                        canvas.Add(pline);
                        //save a memento of the polyline
                        originator.set(pline);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("polyline (points =" + pline.points + ") added to canvas.");
                        Console.WriteLine();
                        break;

                    case "polygon":
                        //create int for random point amount
                        int p2 = rnd.Next(3,15);
                        //create stringbuilder to stroe points
                        var sb2 = new StringBuilder();
                        //loop p times
                        for(int i = 0; i < p2; i++)
                        {
                            //create a point
                            int j = rnd.Next(0,500);
                            //add it to the stringbuilder
                            sb2.Append(" " + j.ToString());
                        }
                        //convert the stringbuilder to string
                        string points2 = sb2.ToString();
                        //create the random polygon
                        Polygon polygon = new Polygon(points2,1);
                        //add it to the canvas
                        canvas.Add(polygon);
                        //save a memento of the polygon
                        originator.set(polygon);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("Polygon (points =" + polygon.points + ") added to canvas.");
                        Console.WriteLine();
                        break;
                    
                    case "path":
                        //create int for random point amount
                        int p3 = rnd.Next(3,10);
                        //create stringbuilder to stroe points
                        var sb3 = new StringBuilder();
                        //create a string of possible commands
                        string pOptions = "MLHVCSQT";
                        //loop p times
                        for(int i = 0; i < p3; i++)
                        {
                            //create some points
                            int j = rnd.Next(0,500);
                            int k = rnd.Next(0,500);
                            int l = rnd.Next(0,500);
                            int m = rnd.Next(0,500);
                            int n = rnd.Next(0,500);
                            int o = rnd.Next(0,500);
                            //choose a command
                            char comm = pOptions[rnd.Next(0,7)];
                            //if comm is H or V only 1 point is needed
                            if(comm == 'H' || comm == 'V')
                            {
                                //add commmand and points to the stringbuilder
                                sb3.Append(" " + comm + " " + j.ToString());
                            }
                            //if comm is M, L or T then  2 points are needed
                            if(comm == 'M' || comm == 'L' || comm == 'T')
                            {
                                //add commmand and points to the stringbuilder
                                sb3.Append(" " + comm + " " + j.ToString() + " " + k.ToString());
                            }
                            //if comm is S or Q then 4 points are needed
                            if(comm == 'S' || comm == 'Q')
                            {
                                //add commmand and points to the stringbuilder
                                sb3.Append(
                                    " " + comm + " "
                                    + j.ToString() + " " + k.ToString() + ", " 
                                    + l.ToString() + " " + m.ToString()
                                );
                            }
                            //if comm is C then all 6 points are needed
                            if(comm == 'C')
                            {
                                //add commmand and points to the stringbuilder
                                sb3.Append(
                                    " " + comm + " " 
                                    + j.ToString() + " " + k.ToString() + ", " 
                                    + l.ToString() + " " + m.ToString() + ", " 
                                    + n.ToString() + " " + o.ToString()
                                );
                            }
                            //close off the path with a Z
                            sb3.Append(" Z");
                        }
                        //convert the stringbuilder to string
                        string points = sb3.ToString();
                        //create the random path
                        Path path = new Path(points,1);
                        //add it to the canvas
                        canvas.Add(path);
                        //save a memento of the path
                        originator.set(path);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("Path (points =" + path.path + ") added to canvas.");
                        Console.WriteLine();
                        break;
                    default:
                        Console.WriteLine("Error: invalid shape.");
                        break;
                }
            }
        }
        // ---------------------- method to add a custom shape ----------------------
        public static void addShape(Canvas canvas, string input)
        {
            //split the input by parameters
            string[] parameters = input.Split();
            //take the shape type
            string theShape = parameters[1];
            //take the creation options
            string rawData = parameters[2].Remove(parameters[2].Length -1,1).Remove(0,1);
            //make an array of the vars
            string[] data = rawData.Split(",");

            //check if the user wants a styled custom shape
            if(input.Contains('['))
            {
                //take the style options
                string rawStyles = parameters[3].Remove(parameters[3].Length -1,1).Remove(0,1);
                //make an array of the vars
                string[] styles = rawStyles.Split(",");

                switch(theShape)
                {
                    case "rectangle":
                        //create a custom rectangle
                        Rect rect = new Rect(int.Parse(data[0]),int.Parse(data[1]),int.Parse(data[2]),int.Parse(data[3]),1);
                        //styling
                        rect.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(rect);
                        //save a memento of the rectaagle
                        originator.set(rect);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Rectangle (x = " + rect.xPos +
                            ", y = " + rect.yPos +
                            ", w = " + rect.width +
                            ", h = " + rect.height + ")" +
                            " style = [" + rect.lineThick + 
                            " " + rect.lineColor + 
                            " " + rect.fillColor + 
                            "] added to canvas."
                        );
                        Console.WriteLine();
                        break;
                    case "circle":
                        //create the custom circle
                        Circle circle = new Circle(int.Parse(data[0]),int.Parse(data[1]),int.Parse(data[2]),1);
                        //styling
                        circle.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(circle);
                        //save a memento of the circle
                        originator.set(circle);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Circle (x = " + circle.cenX +
                            ", y = " + circle.cenY +
                            ", r = " + circle.rad + ")" +
                            " style = [" + circle.lineThick + 
                            " " + circle.lineColor + 
                            " " + circle.fillColor + 
                            "] added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "ellipse":
                        //create the custom ellipse
                        Ellipse ellipse = new Ellipse(int.Parse(data[0]),int.Parse(data[1]),int.Parse(data[2]),int.Parse(data[3]),1);
                        //styling
                        ellipse.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(ellipse);
                        //save a memento of the ellipse
                        originator.set(ellipse);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Ellipse (radX = " + ellipse.radX +
                            ", radY = " + ellipse.radY +
                            ", cenX = " + ellipse.cenX +
                            ", cenY = " + ellipse.cenX + ")" +
                            " style = [" + ellipse.lineThick + 
                            " " + ellipse.lineColor + 
                            " " + ellipse.fillColor + 
                            "] added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "line":
                        //create the custom line
                        Line line = new Line(int.Parse(data[0]),int.Parse(data[1]),int.Parse(data[2]),int.Parse(data[3]),1);
                        //styling
                        line.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(line);
                        //save a memento of the line
                        originator.set(line);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Line (x1 = " + line.xPoint1 +
                            ", y1 = " + line.xPoint2 +
                            ", x2 = " + line.yPoint1 +
                            ", y2 = " + line.yPoint2 + ")" +
                            " style = [" + line.lineThick + 
                            " " + line.lineColor + 
                            " " + line.fillColor + 
                            "] added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "polyline":
                        //create the custom polyline
                        PolyLine pline = new PolyLine(rawData,1);
                        //styling
                        pline.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(pline);
                        //save a memento of the polyline
                        originator.set(pline);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("polyline (points =" + pline.points + ")" +
                            " style = [" + pline.lineThick + 
                            " " + pline.lineColor + 
                            " " + pline.fillColor + 
                            "] added to canvas.");
                        Console.WriteLine();
                        break;

                    case "polygon":
                        //create the custom polygon
                        Polygon polygon = new Polygon(rawData,1);
                        //styling
                        polygon.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(polygon);
                        //save a memento of the polygon
                        originator.set(polygon);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("polylgon (points =" + polygon.points + ")" +
                            " style = [" + polygon.lineThick + 
                            " " + polygon.lineColor + 
                            " " + polygon.fillColor + 
                            "] added to canvas.");
                        Console.WriteLine();
                        break;
                    
                    case "path":
                        //create the custom path
                        Path path = new Path(rawData,1);
                        //styling
                        path.style(styles[0],styles[1],styles[2]);
                        //add it to the canvas
                        canvas.Add(path);
                        //save a memento of the path
                        originator.set(path);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("path (points =" + path.path + ")" +
                            " style = [" + path.lineThick + 
                            " " + path.lineColor + 
                            " " + path.fillColor + 
                            "] added to canvas.");
                        Console.WriteLine();
                        break;
                    default:
                        Console.WriteLine("Error: invalid shape.");
                        break;
                }
            }
            else
            {
                switch(theShape)
                {
                    case "rectangle":
                        //create a custom rectangle
                        Rect rect = new Rect(int.Parse(data[0]),int.Parse(data[1]),int.Parse(data[2]),int.Parse(data[3]),1);
                        //add it to the canvas
                        canvas.Add(rect);
                        //save a memento of the rectaagle
                        originator.set(rect);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Rectangle (x = " + rect.xPos +
                            ", y = " + rect.yPos +
                            ", w = " + rect.width +
                            ", h = " + rect.height + 
                            ") added to canvas."
                        );
                        Console.WriteLine();
                        break;
                    case "circle":
                        //create the custom circle
                        Circle circle = new Circle(int.Parse(data[0]),int.Parse(data[1]),int.Parse(data[2]),1);
                        //add it to the canvas
                        canvas.Add(circle);
                        //save a memento of the circle
                        originator.set(circle);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Circle (x = " + circle.cenX +
                            ", y = " + circle.cenY +
                            ", r = " + circle.rad +
                            ") added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "ellipse":
                        //create the custom ellipse
                        Ellipse ellipse = new Ellipse(int.Parse(data[0]),int.Parse(data[1]),int.Parse(data[2]),int.Parse(data[3]),1);
                        //add it to the canvas
                        canvas.Add(ellipse);
                        //save a memento of the ellipse
                        originator.set(ellipse);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Ellipse (radX = " + ellipse.radX +
                            ", radY = " + ellipse.radY +
                            ", cenX = " + ellipse.cenX +
                            ", cenY = " + ellipse.cenX +
                            ") added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "line":
                        //create the custom rectangle
                        Line line = new Line(int.Parse(data[0]),int.Parse(data[1]),int.Parse(data[2]),int.Parse(data[3]),1);
                        //add it to the canvas
                        canvas.Add(line);
                        //save a memento of the line
                        originator.set(line);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine(
                            "Line (x1 = " + line.xPoint1 +
                            ", y1 = " + line.xPoint2 +
                            ", x2 = " + line.yPoint1 +
                            ", y2 = " + line.yPoint2 +
                            ") added to canvas."
                        );
                        Console.WriteLine();
                        break;

                    case "polyline":
                        //create the custom polyline
                        PolyLine pline = new PolyLine(rawData,1);
                        //add it to the canvas
                        canvas.Add(pline);
                        //save a memento of the polyline
                        originator.set(pline);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("polyline (points =" + pline.points + ") added to canvas.");
                        Console.WriteLine();
                        break;

                    case "polygon":
                        //create the custom polygon
                        Polygon polygon = new Polygon(rawData,1);
                        //add it to the canvas
                        canvas.Add(polygon);
                        //save a memento of the polygon
                        originator.set(polygon);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("Polygon (points =" + polygon.points + ") added to canvas.");
                        Console.WriteLine();
                        break;
                    
                    case "path":
                        //create the custom path
                        Path path = new Path(rawData,1);
                        //add it to the canvas
                        canvas.Add(path);
                        //save a memento of the path
                        originator.set(path);
                        //add the memento to the caretaker
                        caretaker.addMemento(originator.saveToMemento());
                        //increment the position in the list
                        currentShape++;
                        //increment total amount of saved shapes
                        savedShape++;
                        //display message
                        Console.WriteLine("Path (points =" + path.path + ") added to canvas.");
                        Console.WriteLine();
                        break;
                    default:
                        Console.WriteLine("Error: invalid shape.");
                        break;
                }
            }
        }

        //method to save the canvas to an SVG file
        public static void canvasToFile(Canvas canvas)
        {
            //create an SVG file
            string fileName = @".\Canvas.svg";
            //sort the shapes in decending order of index
            canvas.shapeList = canvas.shapeList.OrderByDescending(x => x.index).ToList();
            //use a streamwriter to write the canvas to an SVG file
            using(StreamWriter sw = new StreamWriter(fileName))
            {
                //create the output string
                String output = canvas.ToString();
                //for each shape in the list add it to the canvas
                foreach(Shape shape in canvas.shapeList)
                {
                    //insert the stringified shape inside the canvas 
                    output = output.Insert(output.IndexOf(">") + 1, "\n" + "\t" + shape.ToString());
                }
                sw.Write(output);
            }
        }
        //method to print the canvas to the console
        public static void canvasToConsole(Canvas canvas)
        {
            foreach(Shape shape in canvas.shapeList)
            {
                Console.WriteLine(shape.ToConsole());
            }
        }
    }
    // ------------------- canvas class -------------------
    class Canvas
    {
        //canvas dimensions
        public int width { get; set;}
        public int height { get; set;}
        //create a list to store the shapes on the canvas
        public List<Shape> shapeList = new List<Shape>();
        //default canvas constructor
        public Canvas()
        {
            width = 100;
            height = 100;
        }
        //canvas constructor
        public Canvas(int w, int h)
        {
            width = w;
            height = h;
        }
        //method to add a shape to the canvas
        public void Add(Shape shape)
        {
            shapeList.Add(shape);
        }
        //method to remove a shape from the cnavas
        public void Remove(Shape shape)
        {
            shapeList.Remove(shape);
        }
        //method to clear the cnavas
        public void Clear()
        {
            shapeList.Clear();
        }
        //canvas print method
        public override string ToString()
        {
            return "<svg " + "width=\"" + width + "\" " + "hight=\"" + height + "\">" + "\n" + "</svg>";
        }
    }
    // ------------------- parent shape class -------------------
    public class Shape
    {
        //stroke-width var
        public string lineThick { get; set; }
        //stroke var 
        public string lineColor { get; set; }
        //fill var
        public string fillColor { get; set; }
        //z-index
        public int index { get; set; }
        //default shape with styling
        public Shape()
        {
            lineThick = "5";
            lineColor = "black";
            fillColor = "transparent";
        }
        //styling method
        public void style(string width, string stroke, string fill)
        {
            lineThick = width;
            lineColor = stroke;
            fillColor = fill;
        }
        //virtual ToConsole method
        public virtual string ToConsole()
        {
            return "";
        }
    }
    // ------------------- rectangle child class -------------------
    class Rect : Shape
    {
        //x position
        public int xPos { get; set; }
        //y position
        public int yPos { get; set; }
        //width
        public int width { get; set; }
        //heihgt
        public int height { get; set; }
        //default rectangle constructor
        public Rect() : base()
        {
            xPos = 10;
            yPos = 10;
            width = 30;
            height = 30;
            index = 1;
        }
        //rectangle constructor
        public Rect(int x, int y, int w, int h, int z) : base()
        {
            xPos = x;
            yPos = y;
            width = w;
            height = h;
            index = z;
        }
        //rectangle print method
        public override string ToString()
        {
            return "<rect " 
                        + "x=\"" + xPos + "\" "
                        + "y=\"" + yPos + "\" " 
                        + "width=\"" + width + "\" "
                        + "height=\"" + height + "\" "
                        + "stroke=\"" + lineColor + "\" "
                        + "stroke-width=\"" + lineThick + "\" "
                        + "fill=\"" + fillColor + "\" "
                    + "/>";
        }
        //rectangle to console method
        public override string ToConsole()
        {
            return "Rectangle (x = " + xPos + ", y = " + yPos +", w = " + width +", h = " + height + ")";
        }
    }
    // ------------------- circle child class -------------------
    class Circle : Shape
    {
        //radius
        public int rad { get; set; }
        //x centre
        public int cenX { get; set; }
        //y centre
        public int cenY { get; set; }

        //default circle constructor
        public Circle() : base()
        {
            rad = 25;
            cenX = 75;
            cenY = 20;
            index = 1;
        }
        //circle constructor
        public Circle(int r, int cX, int cY, int z) : base()
        {
            rad = r;
            cenX = cX;
            cenY = cY;
            index = z;
        }
        //circle print method
        public override string ToString()
        {
            return "<circle " 
                        + "cx=\"" + cenX + "\" "
                        + "cy=\"" + cenY + "\" " 
                        + "r=\"" + rad + "\" "
                        + "stroke=\"" + lineColor + "\" "
                        + "stroke-width=\"" + lineThick + "\" "
                        + "fill=\"" + fillColor + "\" "
                    + "/>";
        }
        //circle to console method
        public override string ToConsole()
        {
            return "Circle (cx = " + cenX + ", cy = " + cenY + ", r = " + rad + ")";
        }
    }
    // ------------------- ellipse child class -------------------
    class Ellipse : Shape
    {
        //x radius
        public int radX { get; set; }
        // y radius
        public int radY { get; set; }
        //x centre
        public int cenX { get; set; }
        //y centre
        public int cenY { get; set; }

        //default ellipse constructor
        public Ellipse() : base()
        {
            radX = 75;
            radY = 75;
            cenX = 20;
            cenY = 5;
            index = 1;
        }
        //ellipse constructor
        public Ellipse(int rX, int rY, int cX, int cY, int z) : base()
        {
            radX = rX;
            radY = rY;
            cenX = cX;
            cenY = cY;
            index = z;
        }
        //ellipse print method
        public override string ToString()
        {
            return "<ellipse " 
                        + "cx=\"" + cenX + "\" "
                        + "cy=\"" + cenY + "\" " 
                        + "rx=\"" + radX + "\" "
                        + "ry=\"" + radY + "\" "
                        + "stroke=\"" + lineColor + "\" "
                        + "stroke-width=\"" + lineThick + "\" "
                        + "fill=\"" + fillColor + "\" "
                    + "/>";
        }
        //ellipse to console method
        public override string ToConsole()
        {
            return "Ellipse (cx = " + cenX + ", cy = " + cenY +", rx = " + radX +", ry = " + radY + ")";
        }
    }
    // ------------------- line child class -------------------
    class Line : Shape
    {
        //x point 1
        public int xPoint1 { get; set; }
        // y point 1
        public int yPoint1 { get; set; }
        //x point 2
        public int xPoint2 { get; set; }
        //y point 2
        public int yPoint2 { get; set; }

        //default line constructor
        public Line() : base()
        {
            xPoint1 = 10;
            yPoint1 = 10;
            xPoint2 = 150;
            yPoint2 = 150;
            index = 1;
        }
        //line constructor
        public Line(int x1, int y1, int x2, int y2, int z) : base()
        {
            xPoint1 = x1;
            yPoint1 = y1;
            xPoint2 = x2;
            yPoint2 = y2;
            index = z;
        }
        //line print method
        public override string ToString()
        {
            return "<line " 
                        + "x1=\"" + xPoint1 + "\" "
                        + "y1=\"" + yPoint1 + "\" " 
                        + "x2=\"" + xPoint2 + "\" "
                        + "y2=\"" + yPoint2 + "\" "
                        + "stroke=\"" + lineColor + "\" "
                        + "stroke-width=\"" + lineThick + "\" "
                    + "/>";
        }
        //line to console method
        public override string ToConsole()
        {
            return "Line (x1 = " + xPoint1 + ", y1 = " + yPoint1 +", x2 = " + xPoint2 +", y2 = " + yPoint2 + ")";
        }
    }
    // ------------------- polyline child class -------------------
    class PolyLine : Shape
    {
        //string of points
        public string points { get; set; }

        //default polyline
        public PolyLine() : base()
        {
            points = "60 110 65 120 70 115 75 130 80 125 85 140 90 135 95 150 100 145";
        }
        //polyline constructor
        public PolyLine(string p, int z) : base()
        {
            points = p;
            index = z;
        }
        //polyline print method
        public override string ToString()
        {
            return "<polyline " 
                        + "points=\"" + points + "\" "
                        + "stroke=\"" + lineColor + "\" "
                        + "stroke-width=\"" + lineThick + "\" "
                        + "fill=\"" + fillColor + "\" "
                    + "/>";
        }
        //polyline to console method
        public override string ToConsole()
        {
            return "Polyline (points = " + points + ")";
        }
    }
    // ------------------- polygon child class -------------------
    class Polygon : Shape
    {
        //string of points
        public string points{ get; set; }

        //default polygon
        public Polygon() : base()
        {
            points = "50 160 55 180 70 180 60 190 65 205 50 195 35 205 40 190 30 180 45 180";
        }
        //polygon constructor
        public Polygon(string p, int z) : base()
        {
            points = p;
            index = z;
        }
        //polygon print method
        public override string ToString()
        {
            return "<polygon " 
                        + "points=\"" + points + "\" "
                        + "stroke=\"" + lineColor + "\" "
                        + "stroke-width=\"" + lineThick + "\" "
                        + "fill=\"" + fillColor + "\" "
                    + "/>";
        }
